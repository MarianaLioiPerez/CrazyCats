<div class="home">

    <% @cfcposts.each do |cfcpost| %>
      <div class="card mb-3 tarjeta" style="max-width: 1200px;">
        <div class="row g-0 tarjeta2">
          <div class="col-md-4">
            <%= image_tag cfcpost.photo, class: "img-fluid rounded-start foto" %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= cfcpost.title %></h5>
              <p class="card-text"><%= cfcpost.description %></p>
              <p><%= link_to "VER", cfcpost, class:"link" %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
</div>